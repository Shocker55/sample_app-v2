<% if current_user != article.user %>
  <span class="like">
  <% if article.iine?(current_user) %>
    <%= form_with(model: article.article_likes.find_by(user_id: current_user.id),
              html: { method: :delete }, local: false) do |f| %>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <%= content_tag :span, "", class: "glyphicon glyphicon-heart" %>
        <%= article.article_likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_with(model: article.article_likes.build, local: false) do |f| %>
      <div><%= hidden_field_tag :article_id, article.id %></div>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty"  %>
      <% end %>
    <% end %>
  <% end %>
  </span>
<% end %>
